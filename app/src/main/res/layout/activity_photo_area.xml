<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/relative_click_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.添加位置图片"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.输入位置信息"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@+id/tv_one"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"/>
        <ImageView
            android:id="@+id/image_show_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/person_camera_icon"
            android:layout_toRightOf="@+id/tv_one"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上方图片编辑位置图片"
            android:layout_toRightOf="@+id/tv_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_show_photo"/>
        <EditText
            android:id="@+id/edit_area_message"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/edit_input_bac"
            android:layout_toRightOf="@id/tv_one"
            android:layout_below="@+id/tv_take_photo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:imeOptions="actionSearch"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_click_use">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_finish_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cc"
        android:textColor="@color/white"
        android:text="提交物料信息"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
</RelativeLayout>